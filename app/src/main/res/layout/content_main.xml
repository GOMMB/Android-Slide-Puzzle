<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.gommb.myapplication.MainActivity">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_1"
        android:id="@+id/b1"
        android:layout_marginTop="54dp"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_2"
        android:id="@+id/b2"
        android:textSize="30sp"
        android:layout_alignTop="@+id/b1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_3"
        android:id="@+id/b3"
        android:textSize="30sp"
        android:layout_alignTop="@+id/b2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_4"
        android:id="@+id/b4"
        android:layout_marginTop="27dp"
        android:textSize="30sp"
        android:layout_below="@+id/b1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_5"
        android:id="@+id/b5"
        android:textSize="30sp"
        android:layout_alignTop="@+id/b4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_6"
        android:id="@+id/b6"
        android:textSize="30sp"
        android:layout_alignTop="@+id/b5"
        android:layout_alignLeft="@+id/b3"
        android:layout_alignStart="@+id/b3" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_7"
        android:id="@+id/b7"
        android:textSize="30sp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/b4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_8"
        android:id="@+id/b8"
        android:textSize="30sp"
        android:layout_alignTop="@+id/b7"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b9"
        android:textSize="30sp"
        android:layout_alignTop="@+id/b8"
        android:layout_alignLeft="@+id/b6"
        android:layout_alignStart="@+id/b6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:text="New Game" />
</RelativeLayout>
